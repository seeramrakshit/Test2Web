@model Category

<form method="post">
    <fieldset>
        <div class="border p-3 mt-4">
            <div class="row p-2">
                <h2 class="text-primary">Create Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="form-label mt-4 p-0"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOder" class="form-label mt-4 p-0"></label>
                <input asp-for="DisplayOder" min="-10" max="90" class="form-control" />
                <span asp-validation-for="DisplayOder"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-outline-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-4">
                    <button type="button" class="btn btn-outline-warning form-control">
                        <a asp-controller="Category" asp-action="Index">Back to List</a>
                    </button>
                </div>
            </div>
            
            
            
        </div>
    </fieldset>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}