@page
@model TestRazor.Pages.Categories.DeleteModel

<form method="post">
    <fieldset>
        <input hidden asp-for="category.Id" />
        <div class="border p-3 mt-4">
            <div class="row p-2">
                <h2 class="text-primary">Delete Category</h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="category.Name" class="form-label mt-4 p-0"></label>
                <input asp-for="category.Name" disabled class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="category.DisplayOder" class="form-label mt-4 p-0"></label>
                <input asp-for="category.DisplayOder" disabled min="-10" max="90" class="form-control" />
            </div>
            <div class="row">
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-outline-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-4">
                    <button type="button" class="btn btn-outline-warning form-control">
                        <a asp-page="/Categories/Index">Back to List</a>
                    </button>
                </div>
            </div>



        </div>
    </fieldset>
</form>


